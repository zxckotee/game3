# Docker-специфичные переменные окружения

# Application ports
PORT=3001
REACT_APP_PORT=80

# API URL для клиента (внутри Docker)
REACT_APP_API_URL=http://localhost:3001

# Environment
NODE_ENV=development

# Security (для разработки)
JWT_SECRET=dev_jwt_secret_change_in_production
SESSION_SECRET=dev_session_secret_change_in_production

# Development settings for hot reload
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
FAST_REFRESH=true

# Disable some checks for development
CI=false

# Database (отключено, так как PostgreSQL не используется)
USE_DATABASE=false
USE_MERCHANT_FILES=true